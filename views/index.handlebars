<div class="container handlebar-body align-center">
  <div class="row">
    <div class="col-4 burgerList">
      <h3 class="burgerHead">Available Burgers</h3>
      <ul>

      {{#each burgers}}
        {{#unless devoured}}
          <li>
            <img src="/assets/images/hamburger.png" class="img-fluid">
            <p>{{this.burger_name}}</p>
            <button class="devour btn btn-secondary" id={{this.id}}>Devour Me</button>
          </li>
        {{/unless}}
      {{/each}}

    </ul>
        </div>
        <div class="col-4 burgerList">
          <h3 class="burgerHead">Devoured Burgers</h3>
            <ul>  

            {{#each burgers}}
              {{#if devoured}}
                <li>
                  <img src="/assets/images/hamburger.png" class="img-fluid">
                  <p>{{this.burger_name}}</p>
                  <button class="delete btn btn-secondary" id={{this.id}}>Digest Me</button>
                </li>
              {{/if}}
            {{/each}}

          </ul>
        </div>
      </div>
    </div>


<div class="container">
  <div class="row">
    <div class="col-10 addBurger">
      <h3>Add a new burger</h3>
        <form class="create-form">
          <div class="form-group">
            <label for="burger">Burger Name:</label>
            <input type="text" id="burg" name="name">
          </div>
          <button type="submit" class="newBurg btn btn-secondary">Add Burger</button>
        </form>
    </div>
  </div>
</div>